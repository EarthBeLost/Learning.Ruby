# Assigns the variable types_of_people the value 10.
types_of_people = 10
# Assigns the variable x a string containing a variable.
x = "There are #{types_of_people} types of people."
# Pointless variable that assigns the variable binary to the string binary.
binary = "binary"
# Another pointless variable that assigns do_not the string don't.
do_not = "don't"
# Assigns y a string containing 2 (two) variables.
y = "Those who know #{binary} and those who #{do_not}."

# Prints out the variable x.
puts x
# Prints out the variable y.
puts y

# Prints out a string containing a variable.
puts "I said #{x}."
# Prints out a string containing a variable.
puts "I also said: '#{y}'."

# Sets the variable to boolean false.
hilarious = false
# Prints out a string containing a variable.
joke_evaluation = "Isn't that joke funny?! #{hilarious}"

# Prints out the variable joke_evaluation.
puts joke_evaluation

# Assigns the variable w to a string.
w = "This is the left side of..."
# Assigns the variable e to a string.
e = "a sting with a right side."

# Prints the variables w and e.
puts w + e
